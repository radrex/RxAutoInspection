@model RxAuto.Web.ViewModels.Employees.ViewModels.EmployeesListingViewModel
@{
    ViewData["Title"] = "All";
}

<h1>Employees</h1>
<div class="d-flex justify-content-end">
    <a class="btn btn-lg btn-success" asp-area="Administration" asp-controller="Employees" asp-action="Create">Create new</a>
</div>

<table class="table table-hover table-responsive">
    <thead>
        <tr>
            <th><label asp-for="@Model.Employees.First().FullName"></label></th>
            <th><label asp-for="@Model.Employees.First().PhoneNumber"></label></th>
            <th><label asp-for="@Model.Employees.First().Email"></label></th>
            <th><label asp-for="@Model.Employees.First().OperatingLocation"></label></th>
            <th><label asp-for="@Model.Employees.First().JobPosition"></label></th>
            <th colspan="3">Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td>@employee.FullName</td>
                <td>@employee.PhoneNumber</td>
                <td>@employee.Email</td>
                <td style="white-space:pre-wrap; word-wrap:break-word">@employee.OperatingLocation</td>
                <td>@employee.JobPosition</td>
                <td style="width: 20%">
                    <a class="btn btn-sm btn-success" asp-area="Administration" asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.Id">Edit</a>
                    <a class="btn btn-sm btn-info" asp-area="Administration" asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">Details</a>
                    <a class="btn btn-sm btn-danger" asp-area="Administration" asp-controller="Employees" asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination justify-content-center">
        @if (this.Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" asp-route-page="@(this.Model.CurrentPage - 1)">Previous</a>
            </li>
        }

        @for (int i = 1; i <= this.Model.PagesCount; i++)
        {
            var active = i == this.Model.CurrentPage ? "active" : string.Empty;
            <li class="page-item @active">
                <a class="page-link" asp-route-page="@i">@i</a>
            </li>
        }

        @if (this.Model.CurrentPage == this.Model.PagesCount)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" asp-route-page="@(this.Model.CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>
