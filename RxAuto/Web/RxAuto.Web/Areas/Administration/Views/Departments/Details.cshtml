@model RxAuto.Web.ViewModels.Departments.ViewModels.DepartmentDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<h4>Departments information</h4>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="@Model.Name"></label>
        </dt>
        <dd class="col-sm-10">
            <label asp-for="@Model.Name">@Model.Name</label>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.Email"></label>
        </dt>
        <dd class="col-sm-10">
            <label asp-for="@Model.Email">@Model.Email</label>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.Description"></label>
        </dt>
        <dd class="col-sm-10">
            <label asp-for="@Model.Description">@Model.Description</label>
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-info" asp-area="Administration" asp-controller="Departments" asp-action="All">Back to List</a>
    <a class="btn btn-success" asp-area="Administration" asp-controller="Departments" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
