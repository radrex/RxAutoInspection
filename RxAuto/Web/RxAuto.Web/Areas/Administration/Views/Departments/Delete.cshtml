@model RxAuto.Web.ViewModels.Departments.ViewModels.DeleteDepartmentViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this department? Bear in mind that every phone linked to this department will be deleted as well. Also every Operating Location will looe this Department from its list of Departments.</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="@Model.Name"></label>
        </dt>
        <dd class="col-sm-10">
            <label asp-for="@Model.Name">@Model.Name</label>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.Email"></label>
        </dt>
        <dd class="col-sm-10">
            <label asp-for="@Model.Email">@Model.Email</label>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.Description"></label>
        </dt>
        <dd class="col-sm-10">
            <label asp-for="@Model.Description">@Model.Description</label>
        </dd>
    </dl>

    <form method="post" asp-controller="Departments" asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-info" asp-action="All">Back to List</a>
    </form>
</div>
