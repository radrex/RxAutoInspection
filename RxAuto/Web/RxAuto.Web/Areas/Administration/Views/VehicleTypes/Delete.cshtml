@model RxAuto.Web.ViewModels.VehicleTypes.ViewModels.DeleteVehicleTypeViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this vehicle type? Bear in mind that every service using this VehicleType will be cascade deleted as well.</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="@Model.VehicleCategory"></label>
        </dt>
        <dd class="col-sm-10">
            <label asp-for="@Model.Name">@Model.VehicleCategory</label>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.Name"></label>
        </dt>
        <dd class="col-sm-10">
            <label asp-for="@Model.Name">@Model.Name</label>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.Description"></label>
        </dt>
        <dd class="col-sm-10">
            <label asp-for="@Model.Description">@Model.Description</label>
        </dd>
    </dl>

    <form method="post" asp-controller="VehicleTypes" asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-info" asp-action="All">Back to List</a>
    </form>
</div>
