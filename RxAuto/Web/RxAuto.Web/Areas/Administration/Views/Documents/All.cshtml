@model RxAuto.Web.ViewModels.Documents.ViewModels.DocumentsListingViewModel
@{
    ViewData["Title"] = "All";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="d-flex justify-content-center">Документи</h1>
            <a class="btn btn-outline-success float-right mb-2" asp-area="Administration" asp-controller="Services" asp-action="Create">Създай нов документ</a>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th><label asp-for="@Model.Documents.First().Name"></label></th>
                        <th colspan="3">Опции</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var document in Model.Documents)
                    {
                        <tr>
                            <td>@document.Name</td>
                            <td style="width: 25%">
                                <a class="btn btn-sm btn-success" asp-area="Administration" asp-controller="Documents" asp-action="Edit" asp-route-id="@document.Id">Промени</a>
                                <a class="btn btn-sm btn-info" asp-area="Administration" asp-controller="Documents" asp-action="Details" asp-route-id="@document.Id">Детайли</a>
                                <a class="btn btn-sm btn-danger" asp-area="Administration" asp-controller="Documents" asp-action="Delete" asp-route-id="@document.Id">Изтрий</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<nav>
    <ul class="pagination justify-content-center">
        @if (this.Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Назад</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" asp-route-page="@(this.Model.CurrentPage - 1)">Назад</a>
            </li>
        }

        @for (int i = 1; i <= this.Model.PagesCount; i++)
        {
            var active = i == this.Model.CurrentPage ? "active" : string.Empty;
            <li class="page-item @active">
                <a class="page-link" asp-route-page="@i">@i</a>
            </li>
        }

        @if (this.Model.CurrentPage == this.Model.PagesCount)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Напред</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" asp-route-page="@(this.Model.CurrentPage + 1)">Напред</a>
            </li>
        }
    </ul>
</nav>