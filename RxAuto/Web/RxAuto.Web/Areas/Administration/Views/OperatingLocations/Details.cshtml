@model RxAuto.Web.ViewModels.OperatingLocations.ViewModels.OperatingLocationDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="d-flex justify-content-center">Детайли</h1>
            <hr />
            <h4>Информация за Работна Локация</h4>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    <label asp-for="@Model.Town"></label>
                </dt>
                <dd class="col-sm-10">
                    <label asp-for="@Model.Town">@Model.Town</label>
                </dd>
                <dt class="col-sm-2">
                    <label asp-for="@Model.Address"></label>
                </dt>
                <dd class="col-sm-10">
                    <label asp-for="@Model.Address">@Model.Address</label>
                </dd>
            </dl>

            <a class="btn btn-success" asp-area="Administration" asp-controller="OperatingLocations" asp-action="Edit" asp-route-id="@Model.Id">Промени</a>
            <a class="btn btn-info" asp-area="Administration" asp-controller="OperatingLocations" asp-action="All">Върни се обратно</a>
        </div>
    </div>
</div>
