@model RxAuto.Web.ViewModels.OperatingLocations.ViewModels.DeleteOperatingLocationViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this operating location? Bear in mind that every department's operatingLocationId will be set to null, Every employee linked with this operating location will be deleted, Every service linked with this operating location will be deleted.</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="@Model.Town"></label>
        </dt>
        <dd class="col-sm-10">
            <label asp-for="@Model.Town">@Model.Town</label>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.Address"></label>
        </dt>
        <dd class="col-sm-10">
            <label asp-for="@Model.Address">@Model.Address</label>
        </dd>
    </dl>

    <form method="post" asp-controller="OperatingLocations" asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-info" asp-action="All">Back to List</a>
    </form>
</div>
