@model RxAuto.Web.ViewModels.OperatingLocations.ViewModels.DeleteOperatingLocationViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="d-flex justify-content-center">Изтриване на Работна Локация</h1>
            <hr />
            <h3>Сигурни ли сте, че искате да изтриете тази работна локация? Всеки отдел с тази работна локация ще остане без такава. Всеки служител свързан с тази работна локация също ще бъде изтрит.</h3>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    <label asp-for="@Model.Town"></label>
                </dt>
                <dd class="col-sm-10">
                    <label asp-for="@Model.Town">@Model.Town</label>
                </dd>
                <dt class="col-sm-2">
                    <label asp-for="@Model.Address"></label>
                </dt>
                <dd class="col-sm-10">
                    <label asp-for="@Model.Address">@Model.Address</label>
                </dd>
            </dl>

            <form method="post" asp-area="Administration" asp-controller="OperatingLocations" asp-action="Delete">
                <input type="submit" value="Изтрий" class="btn btn-danger" />
                <a class="btn btn-info" asp-area="Administration" asp-controller="OperatingLocations" asp-action="All">Върни се обратно</a>
            </form>
        </div>
    </div>
</div>
