@model RxAuto.Web.ViewModels.Phones.ViewModels.PhoneDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="d-flex justify-content-center">Детайли</h1>
            <hr />
            <h4>Информация за телефон</h4>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    <label asp-for="@Model.PhoneNumber"></label>
                </dt>
                <dd class="col-sm-10">
                    <label asp-for="@Model.PhoneNumber">@Model.PhoneNumber</label>
                </dd>
                <dt class="col-sm-2">
                    <label asp-for="@Model.IsInternal"></label>
                </dt>
                <dd class="col-sm-10">
                    <label asp-for="@Model.IsInternal">@Model.IsInternal</label>
                </dd>
            </dl>
            <a class="btn btn-info" asp-area="Administration" asp-controller="Phones" asp-action="All">Върни се обратно</a>
            <a class="btn btn-success" asp-area="Administration" asp-controller="Phones" asp-action="Edit" asp-route-id="@Model.Id">Промени</a>
        </div>
    </div>
</div>
