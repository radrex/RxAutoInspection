@model RxAuto.Web.ViewModels.Phones.ViewModels.DeletePhoneViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="d-flex justify-content-center">Изтриване на телефон</h1>
            <hr />
            <h3>Сигурни ли сте, че искате да изтриете този телефон? Всеки отдел ще загуби изтрития телефон.</h3>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    <label asp-for="@Model.PhoneNumber"></label>
                </dt>
                <dd class="col-sm-10">
                    <label asp-for="@Model.PhoneNumber">@Model.PhoneNumber</label>
                </dd>
                <dt class="col-sm-2">
                    <label asp-for="@Model.IsInternal"></label>
                </dt>
                <dd class="col-sm-10">
                    <label asp-for="@Model.IsInternal">@Model.IsInternal</label>
                </dd>
            </dl>

            <form method="post" asp-area="Administration" asp-controller="Phones" asp-action="Delete">
                <input type="submit" value="Изтрий" class="btn btn-danger" />
                <a class="btn btn-info" asp-area="Administration" asp-controller="Phones" asp-action="All">Върни се обратно</a>
            </form>
        </div>
    </div>
</div>
