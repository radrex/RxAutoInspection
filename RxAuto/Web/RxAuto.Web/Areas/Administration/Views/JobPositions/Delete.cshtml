@model RxAuto.Web.ViewModels.JobPositions.ViewModels.DeleteJobPositionViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this job position? Bear in mind that every employee and qualification linked to this job position will be deleted as well.</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="@Model.Name"></label>
        </dt>
        <dd class="col-sm-10">
            <label asp-for="@Model.Name">@Model.Name</label>
        </dd>
    </dl>

    <form method="post" asp-area="Administration" asp-controller="JobPositions" asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-info" asp-area="Administration" asp-controller="JobPositions" asp-action="All">Back to List</a>
    </form>
</div>
