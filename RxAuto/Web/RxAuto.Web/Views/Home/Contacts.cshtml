@model RxAuto.Web.ViewModels.OperatingLocations.ViewModels.OperatingLocationsViewModel

@{
    ViewData["Title"] = "Services";
}

<div class="container">
    @foreach (var operatingLocation in Model.OperatingLocations)
    {
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <h3>@operatingLocation.Town</h3>
            </div>
            <div class="col-12 d-flex justify-content-center">
                <h5>@operatingLocation.Address</h5>
            </div>
            <h5>Отдели</h5>
            @foreach (var department in operatingLocation.Departments)
            {
                <div class="col-12">
                    <ul style="list-style:square">
                        <li style="margin-left: 1rem">
                            @department.Name - @department.Email
                            <ul style="list-style:circle">
                                @foreach (var phone in department.Phones)
                                {
                                    <li style="margin-left: 3rem">@phone.PhoneNumber</li>
                                }
                            </ul>
                        </li>
                    </ul>
                </div>
            }
        </div>
        <hr />
    }

    <div class="row d-flex justify-content-center">
        <div class="col-10">
            <div id="googleMap" style="width:100%;height:400px;"></div>

            <script>
                function myMap() {
                    var mapProp = {
                        center: new google.maps.LatLng(51.508742, -0.120850),
                        zoom: 5,
                    };
                    var map = new google.maps.Map(document.getElementById("googleMap"), mapProp);
                }
            </script>

            <script src="https://maps.googleapis.com/maps/api/js?key=&callback=myMap"></script>
        </div>
    </div>
</div>



