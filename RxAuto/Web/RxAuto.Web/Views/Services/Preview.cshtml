@model RxAuto.Web.ViewModels.Services.ViewModels.ServicesViewModel

@{
    ViewData["Title"] = "Services";
}

<div class="container">
    <div class="row">
        @foreach (var serviceType in Model.ServiceTypes)
        {
            <div class="col-md-4 media">
                <div class="media-body">
                    <h5 class="mt-0"><a href="@serviceType.Url">@serviceType.Name</a></h5>
                    @serviceType.Description
                    @if (this.User.IsInRole("Administrator"))
                    {
                        @serviceType.IsShownInMainMenu
                    }
                </div>
            </div>
        }
    </div>
</div>
