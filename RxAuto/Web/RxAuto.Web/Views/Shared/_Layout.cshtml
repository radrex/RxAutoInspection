<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RxAuto</title>
    <link rel="stylesheet" href="~/lib/reset-css/reset.min.css" />

    <!-- Used for bootstrap-select dropdown -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-select.min.css" />

    <link rel="stylesheet" href="~/lib/jquery-datetimepicker/jquery.datetimepicker.min.css" />

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <vc:menu></vc:menu>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @if (this.User.IsInRole("Administrator"))
            {
                <vc:admin-menu></vc:admin-menu>
            }
            @RenderBody()
        </main>
    </div>
    <div class="container">
        <footer class="pt-4 my-md-5 pt-md-5 border-top">
            <div class="row">
                <div class="col-12 col-md">
                    <p>RxAuto <small class="d-block mb-3 text-muted">© 2020</small></p>
                </div>
                <div class="col-6 col-md">
                    <h5><a asp-controller="Home" asp-action="Contacts">Контакти</a></h5>
                    <ul class="list-unstyled text-small">
                        <li><a class="text-muted" href="#">Resource</a></li>
                        <li><a class="text-muted" href="#">Resource name</a></li>
                        <li><a class="text-muted" href="#">Another resource</a></li>
                        <li><a class="text-muted" href="#">Final resource</a></li>
                    </ul>
                </div>
                <div class="col-6 col-md">
                    <h5><a asp-controller="Home" asp-action="Privacy">Privacy</a></h5>
                    <ul class="list-unstyled text-small">
                        <li><a class="text-muted" href="#">Team</a></li>
                        <li><a class="text-muted" href="#">Locations</a></li>
                        <li><a class="text-muted" href="#">Privacy</a></li>
                        <li><a class="text-muted" href="#">Terms</a></li>
                    </ul>
                </div>
            </div>
        </footer>
    </div>

    <!-- Used for bootstrap-select dropdown -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap-select.min.js"></script>

    @*<script src="~/lib/jquery-slim/dist/jquery.slim.min.js"></script>*@
    <script src="/jquery.js"></script>
    <script src="~/lib/popper/dist/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery-datetimepicker/build/jquery.datetimepicker.full.min.js"></script>

    <!-------------------------------------------------------------------------------------------------->
    @*<script src="~/lib/jquery-slim/dist/jquery.slim.min.js"></script>
        <script src="~/lib/popper/dist/umd/popper.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>*@

    <!-- Used for bootstrap-select dropdown -->
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap-select.min.js"></script>*@

    @*<script src="/jquery.js"></script>
        <script src="~/lib/jquery-datetimepicker/build/jquery.datetimepicker.full.min.js"></script>*@

    <script>
        $('#picker').datetimepicker({
            timepicker: true,
            datepicker: true,
            format: 'd-m-Y H:i',
            value: '2020-4-1 09:45',
            hours12: false,
            step: 30,
            yearStart: 2020,
            yearEnd: 2025,
            allowTimes: [
                '06:00', '06:30', '07:00', '07:30', '08:00', '08:30', '09:00', '09:30', '10:00', '10:30', '11:00', '11:30',
                '12:00', '12:30', '13:00', '13:30', '14:00', '14:30', '15:00', '15:30', '16:00', '16:30', '17:00', '17:30',
                '18:00', '18:30'
            ]
        })
    </script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
